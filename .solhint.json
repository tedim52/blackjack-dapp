{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "max-line-length": ["error",180],
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "not-rely-on-time": "off",
    "no-empty-blocks": "off",
    "reason-string": "off"
  }
}